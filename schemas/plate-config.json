{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["layout", "mode", "labels"],
  "properties": {
    "layout": {
      "type": "string",
      "enum": ["spiral", "twin-cone", "wheel", "grid"]
    },
    "mode": {
      "type": "integer",
      "minimum": 1
    },
    "labels": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": { "$data": "1/mode" },
      "maxItems": { "$data": "1/mode" }
    }
  },
  "additionalProperties": false
}
